@model Order
@{
    ViewData["Title"] = "Remove";
}
<h1>Remove Order</h1>
<br />
<form asp-action="Remove" asp-controller="Products" method="post" class="btn btn-danger">
    <input asp-for="Id" value="@Model.Id" type="hidden" />
    <font style="align-content: stretch">

        <label asp-for="OrderTime"></label>
        <input asp-for="OrderTime" disabled />
        <br />
        <hr />

        <input type="submit" value="Remove Order?" />
        <br />

        <input type="submit" value="Back To List" asp-action="Index" />
    </font>
</form>