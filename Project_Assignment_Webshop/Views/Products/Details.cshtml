@model Product
@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>
<hr />
<br />

<form asp-controller="Products" asp-action="Details" method="post" class="btn btn-info col-lg-8">

    <label asp-for="ProductType"></label>
    <select asp-for="ProductType" disabled>
        <option value="0">Pizza</option>
        <option value="1">Kebab/Gyros/Kyckling (Bröd/Pita/Tallrik)</option>
        <option value="2">Sallad med Bröd</option>
        <option value="3">Hamburgare</option>
        <option value="4">Korv</option>
        <option value="5">A La Carte</option>
        <option value="6">Tillbehör</option>
        <option value="7">Sås</option>
        <option value="8">Dryck</option>
    </select>
    <br />

    <label asp-for="Number"></label>
    <input asp-for="Number" disabled />
    <br />

    <label asp-for="Name"></label>
    <input asp-for="Name" disabled />
    <br />

    <label asp-for="Description"></label>
    <input asp-for="Description" disabled />
    <br />
    <br />
    <input type="submit" value="Back To List" asp-action="Index" class="align-content-end" />
</form>